{
  "name": "natrium",
  "version": "0.0.8",
  "description": "libsodium node.js bindings",
  "main": "index.js",
  "libraries": [
    "v8",
    "sodium"
  ],
  "scripts": {
    "test": "mocha --compilers js:babel/register",
    "build": "make -f ../naio/makefile",
    "build:dev": "make -f node_modules/naio/makefile",
    "babel": "babel natrium.js -o index.js",
    "postinstall": "npm run build",
    "prepublish": "npm run babel",
    "push": "npm run babel && git add . && git commit && git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wilhelmmatilainen/natrium.git"
  },
  "author": "Wilhelm Matilainen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wilhelmmatilainen/natrium/issues"
  },
  "homepage": "https://github.com/wilhelmmatilainen/natrium#readme",
  "keywords": [
    "sodium",
    "libsodium",
    "nacl",
    "curve25519",
    "chacha20",
    "salsa20",
    "xsalsa20",
    "poly1305",
    "blake2",
    "crypt",
    "crypto",
    "encrypt",
    "encryption",
    "decrypt",
    "decryption",
    "sign",
    "signature",
    "verify",
    "secure",
    "security",
    "native"
  ],
  "dependencies": {
    "naio": "^0.0.4",
    "nan": "^2.0.5"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "chai": "^3.2.0",
    "debug": "^2.2.0",
    "mocha": "^2.2.5"
  }
}
