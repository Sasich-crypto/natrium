{
  "name": "natrium",
  "version": "0.0.13",
  "description": "libsodium node.js bindings",
  "main": "index.js",
  "libraries": [
    "v8",
    "sodium"
  ],
  "scripts": {
    "test": "mocha --compilers js:babel-core/register",
    "postinstall": "make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wilhelmmatilainen/natrium.git"
  },
  "author": "Wilhelm Matilainen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wilhelmmatilainen/natrium/issues"
  },
  "homepage": "https://github.com/wilhelmmatilainen/natrium#readme",
  "keywords": [
    "sodium",
    "libsodium",
    "nacl",
    "curve25519",
    "chacha20",
    "salsa20",
    "xsalsa20",
    "poly1305",
    "blake2",
    "crypt",
    "crypto",
    "encrypt",
    "encryption",
    "decrypt",
    "decryption",
    "sign",
    "signature",
    "verify",
    "secure",
    "security",
    "native"
  ],
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-runtime"
    ]
  },
  "dependencies": {
    "nan": "^2.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "debug": "^2.2.0",
    "mocha": "^2.4.5",
    "wilu": "^0.0.24"
  },
  "build": {
    "libraries": {
      "shared": [
        "v8",
        "sodium"
      ]
    },
    "library": true,
    "shared": true,
    "sources": {
      "path": "src",
      "include": [
        "*.cc"
      ]
    },
    "directories": {
      "output": "lib"
    },
    "definitions": [
      "PIC",
      "_LARGEFILE_SOURCE",
      "_FILE_OFFSET_BITS=64",
      "_GNU_SOURCE",
      "EV_MULTIPLICITY=0"
    ],
    "search": {
      "includes": [
        "/usr/include/node",
        "node_modules",
		".."
      ]
    },
    "options": {
      "compiler": {
        "c++": [
          "std=c++11"
        ]
      }
    },
    "+": {
      "all": {
        "name": "natrium.node",
        "options": {
          "compiler": {
            "all": [
              "Wall"
            ]
          }
        },
        "commands": [
          "cp -f build/lib/libnatrium.node.so build/lib/natrium.node"
        ]
      }
    }
  }
}
